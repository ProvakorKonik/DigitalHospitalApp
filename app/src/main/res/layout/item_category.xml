<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginVertical="20dp"
    android:id="@+id/cardview_level_d_item"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"

    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    cardview:cardCornerRadius="25dp"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#ffe0e7"
        android:orientation="horizontal">



        <ImageView
            android:id="@+id/card_category_imagecard"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="#fff"
            android:scaleType="centerCrop"
            android:padding="20dp"
            cardview:layout_constraintEnd_toEndOf="parent"
            cardview:layout_constraintStart_toStartOf="parent"
            cardview:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/card_category_add_circle_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_baseline_add_circle_outline_24"
            android:layout_margin="8dp"
            cardview:layout_constraintEnd_toEndOf="@+id/card_category_imagecard"
            cardview:layout_constraintTop_toTopOf="@+id/card_category_imagecard"
            cardview:tint="@color/Red400" />

        <TextView
            android:id="@+id/card_category_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="Heart"

            android:textColor="@color/black"
            android:textSize="16sp"
            cardview:layout_constraintBottom_toBottomOf="parent"
            cardview:layout_constraintEnd_toEndOf="@+id/card_category_imagecard"
            cardview:layout_constraintStart_toStartOf="@+id/card_category_imagecard"
            cardview:layout_constraintTop_toBottomOf="@+id/card_category_imagecard" />

        <!---->


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>