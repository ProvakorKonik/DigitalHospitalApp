<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.DoctorProfile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical" >
                <ImageView
                    android:id="@+id/doctor_profile_imageview"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#222d"/>
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/doctor_profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ems="10"
                    android:text="Doctor Name"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/doctor_profile_designation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="Designation"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/doctor_profile_time_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="10:00AM - 02:00PM"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/doctor_profile_rating_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="25dp"
                        android:fontFamily="sans-serif-thin"
                        android:text="5.0"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <RatingBar
                        android:id="@+id/doctor_profile_rating_bar"
                        style="@style/customRatingBar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"

                        android:foregroundTint="@color/GoldenRating"
                        android:rating="3.5"
                        android:scaleX="1.5"
                        android:scaleY="1.5"
                        android:stepSize="0.5" />
                </LinearLayout>

                <TextView
                    android:id="@+id/doctor_profile_info_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:text="Doctor Information About About About ksdljflksjfl sdahfklsdhf kjsdhfkjsdhf jkasdhf jksdhfksjdhfsdjkfh skdfhsdkjfhsdkjfh skdjfhsdjkfhsdkjfhsdkjafh skdjfhsd kjfhjksdahfsdkajfh"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="sans-serif-thin"
                            android:src="@drawable/ic_baseline_done_all_24"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/doctor_profile_total_order"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="251+ Orders"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="5dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/product_text_rating_i57nt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="sans-serif-thin"
                            android:src="@drawable/ic_baseline_face_24"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:visibility="visible"/>

                        <TextView
                            android:id="@+id/doctor_profile_total_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7698+ Views"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/product_text_rating_i576nt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="10dp"
                            android:fontFamily="sans-serif-thin"
                            android:src="@drawable/ic_baseline_local_police_24"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/doctor_profile_charge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="800TK Charge"
                            android:textSize="14sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/doctor_profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:fontFamily="sans-serif-light"
                    android:text="Address: Room no: 202, First Floor, Labaid Hospital"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/doctor_profile_booked_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="30dp"
                    android:paddingHorizontal="20dp"
                    android:text="Take Appointment" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>